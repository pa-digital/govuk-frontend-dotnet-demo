@using GDS.Components.Enum
@using GDS.Components.ViewModels
@{
    ViewData["Title"] = "Component Input Details";
}
@model GDSDemo.RequestModels.DataInputRequestModel;
<div class="govuk-grid-row">
    <div class="govuk-grid-column-full"><h1 class="govuk-heading-l">@ViewData["Title"]</h1></div>
</div>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <dl class="govuk-summary-list">
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Sort
                </dt>
                <dd class="govuk-summary-list__value">
                    @Model.Sort
                </dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Location
                </dt>
                <dd class="govuk-summary-list__value">
                    @Model.Location
                </dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Date of Birth
                </dt>
                <dd class="govuk-summary-list__value">
                    @Model.DateOfBirth
                </dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Passport Expiry Date
                </dt>
                <dd class="govuk-summary-list__value">
                    @Model.PassportExpiry
                </dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    National Insurance Number
                </dt>
                <dd class="govuk-summary-list__value">
                    @Model.NationalInsuranceNumber
                </dd>
            </div>
        </dl>
    </div>
</div>